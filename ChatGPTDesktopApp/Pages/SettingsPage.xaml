<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="ChatGPTDesktopApp.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ChatGPTDesktopApp.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="Transparent"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Padding="24,24,24,12">
            <TextBlock Style="{ThemeResource HeaderTextBlockStyle}" Text="Settings" />
        </Grid>

        <Grid Grid.Row="1">
            <StackPanel
                Margin="24,0,24,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Orientation="Vertical"
                Spacing="20">
                <ComboBox
                    x:Name="ThemeSelectorComboBox"
                    Header="App Theme"
                    IsEditable="False"
                    IsTextSearchEnabled="False"
                    LightDismissOverlayMode="Off"
                    Loaded="ThemeSelectorComboBox_Loaded"
                    SelectionChanged="ThemeSelectorComboBox_SelectionChanged">
                    <ComboBoxItem Content="System Default" Tag="0" />
                    <ComboBoxItem Content="Light" Tag="1" />
                    <ComboBoxItem Content="Dark" Tag="2" />
                </ComboBox>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
