<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="ChatGPTDesktopApp.Pages.NewChatPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ChatGPTDesktopApp.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="Transparent"
    BackgroundSizing="OuterBorderEdge"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <ComboBox
                x:Name="ChatGptModelSelectorComboBox"
                Margin="4"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                IsEditable="False"
                IsTextSearchEnabled="False"
                LightDismissOverlayMode="On">
                <ComboBoxItem Content="ChatGPT 5.1 Auto" IsSelected="True" />
                <ComboBoxItem Content="ChatGPT 5.1 Instant" />
                <ComboBoxItem Content="ChatGPT 5.1 Thinking" />
                <NavigationViewItemSeparator IsEnabled="False" />
                <ComboBoxItem Content="GPT-4o" />
                <ComboBoxItem Content="GPT-4.1" />
                <ComboBoxItem Content="o3" />
                <ComboBoxItem Content="o4-mini" />
            </ComboBox>
            <Button
                x:Name="StartNewInPrivateChatButton"
                Margin="4"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                CornerRadius="8">
                <Image
                    Width="20"
                    Height="20"
                    Source="{ThemeResource AppNewChatIcon}"
                    Stretch="UniformToFill" />
            </Button>
        </Grid>

        <Grid
            Grid.Row="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="Transparent">
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Vertical"
                Spacing="10">
                <TextBlock
                    Margin="4"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    HorizontalTextAlignment="Center"
                    MaxLines="1"
                    Style="{ThemeResource SubheaderTextBlockStyle}"
                    Text="Where should we begin?"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />
                <TextBox
                    x:Name="NewChatInputTextBox"
                    Width="500"
                    Margin="4"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Left"
                    PlaceholderText="Ask anything" />
            </StackPanel>
        </Grid>
    </Grid>
</Page>
